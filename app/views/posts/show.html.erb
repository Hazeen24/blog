<h2> Details of the Post</h2>
<h1><%= @post.title%></h1>
<p><%= @post.body%></p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <%= link_to "Eidt Comment", edit_post_comment_path(@post, comment) %>
  <%= link_to "Delete Comment", [@post ,comment], method: :delete, data:{ confirm:"Are You sure?" } %>
<% end %>
<h2>Add a comment:</h2>
<%= render partial:"comments", locals: {post: @post} %>

<%= link_to "Eidt Post", edit_post_path(@post) %>
<%= link_to "Delete Post", post_path(@post), method: :delete, data:{ confirm:"Are You sure?" } %>